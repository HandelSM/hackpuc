<p id="notice"><%= notice %></p>

<h1>Listing Laws</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laws.each do |law| %>
      <tr>
        <td><%= law.description %></td>
        <td><%= law.get_likes.size %></td>
        <td><%= link_to 'Show', law %></td>
        <td><%= link_to 'Edit', edit_law_path(law) %></td>
        <td><%= link_to 'Destroy', law, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

