<% provide(:title, "Entrar") %>
<h3>Entrar</h3>

<div class="row">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <br>
      <%= f.label :password, "Senha" %>
      <%= f.password_field :password, style:"margin-top: 3px", class: 'form-control' %>
      <br>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, style:"margin-top: 5px" %>
        <span>Lembrar-me</span>
      <% end %>

      <%= f.submit "Entrar" %>
    <% end %>
    <br>
    <p>Novo usu√°rio? <%= link_to "Inscreva-se!", signup_path %></p>
</div>